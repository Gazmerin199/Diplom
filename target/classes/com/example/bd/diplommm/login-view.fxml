<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0"
      style="-fx-padding: 40;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.bd.diplommm.LoginController">
    <!-- Заголовок приложения -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="Банк Данных детей с инвалидностью" />

    <!-- Подзаголовок -->
    <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Вход в систему" />

    <!-- Форма входа -->
    <VBox spacing="10.0" style="-fx-padding: 0 50 0 50;">
        <Label style="-fx-font-weight: bold;" text="Имя пользователя:" />
        <TextField fx:id="usernameField" promptText="Введите username" style="-fx-pref-width: 250px;" />

        <Label style="-fx-font-weight: bold;" text="Пароль:" />
        <PasswordField fx:id="passwordField" promptText="Введите пароль" style="-fx-pref-width: 250px;" />
    </VBox>

    <!-- Кнопки -->
    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="loginButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100px;" text="Войти" onAction="#handleLogin"/>
    </HBox>

    <!-- Лейбл для ошибок -->
    <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;" text=" " />

    <!-- Пустая область для центрирования (опционально) -->

</VBox>
